schema diary_page {
    stemming: none
    document diary_page inherits base_definition {
        field id type long {
            indexing: summary
        }
        field content type string {
            indexing: index | summary
            index: enable-bm25
            summary: dynamic
            stemming: none
        }
    }
    fieldset default {
        fields: content
    }
    rank-profile default inherits default {
        first-phase {
            expression {
                bm25(content)
            }
        }
        rank-type content: about
    }
    document-summary debug-content {
        summary content { }
        summary content_tokens {
            source: content
            tokens
        }
        from-disk
    }
}